<div style="
 color: #f7f21a;
 font-size: 21px;display:  flex;cursor: pointer; align-items: center"
     class="yellow-neon"
     onclick="@NavigateToMain">
    <div>Magic company</div>
    <div style="background-image: url(@_catUrl); width: 50px; height: 50px; background-size: cover; scale: .6;"></div>
</div>

@code{
    string _catUrl = "/favicon.png";
    
    [Inject] public NavigationManager NavigationManager { get; set; }

    void NavigateToMain()
    {
        NavigationManager.NavigateTo(NavigationManager.BaseUri);
    }
    

}